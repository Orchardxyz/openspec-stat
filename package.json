{
  "name": "openspec-stat",
  "version": "1.4.3",
  "description": "Track team members' OpenSpec proposals and code changes in Git repositories",
  "type": "module",
  "main": "dist/esm/index.js",
  "packageManager": "pnpm@10.12.1",
  "bin": {
    "openspec-stat": "dist/esm/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "father dev",
    "build": "father build && fix-esm-import-path dist/esm",
    "build:deps": "father prebundle",
    "prepublishOnly": "father doctor && npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:cli": "node dist/esm/cli.js --help",
    "link:global": "npm link",
    "link:local": "pnpm run build && chmod +x dist/esm/cli.js && npm link .",
    "unlink": "npm unlink -g openspec-stat",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "changeset": "changeset",
    "changeset:add": "changeset add"
  },
  "keywords": [
    "openspec",
    "git",
    "statistics",
    "cli",
    "analytics"
  ],
  "authors": [
    "Orchard <orchardyz@outlook.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Orchardxyz/openspec-stat.git"
  },
  "bugs": {
    "url": "https://github.com/Orchardxyz/openspec-stat/issues"
  },
  "homepage": "https://github.com/Orchardxyz/openspec-stat#readme",
  "files": [
    "dist/esm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "father": "^4.6.13",
    "fix-esm-import-path": "^1.10.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mock-fs": "^5.5.0",
    "prettier": "^3.2.5",
    "typescript": "^5.5.4",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "ora": "^8.1.1",
    "simple-git": "^3.30.0"
  }
}
